
<h1>Choose your Crust</h1>

<div class="album py-5 album-transparent">
  <div class="container">
    <div class="row">
      <% @crusts.each do |crust| %>

        <div class="col-md-4">
          <div class="card mb-4 box-shadow" style="border-radius: 25px">
            <h1><%= crust.thiknes %></h1>
            <div class="card-body">
              <h3>Price</h3>
              <h5 class="card-text">$ <%=crust.price%></h5>

              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">

                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Show', crust %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_crust_path(crust) %></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Destroy', crust, method: :delete, data: { confirm: 'Are you sure?' } %></button>

                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>



<%= link_to 'New Crust', new_crust_path %>
